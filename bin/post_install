#!/bin/bash -e

# Mock cartridge for testing and verifying node platform code. This is
# not an example of how to write a well-formed cartridge.

case "$1" in
  -v|--version)
    version="$2"
esac

function error_exit {
  echo -e "$1\nexit $2" 
  echo -e $1 1>&2
  exit $2
}

if [[ -n "$version" ]]; then
  echo "Creating version marker for $version"
else
  echo "Skipping version creation marker."
fi



exit 0
